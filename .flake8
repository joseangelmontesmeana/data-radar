[flake8]
max-line-length = 120

# Ignore errors block. Please, if you extend that, include the meaning of the code in the list
ignore = F841, W503, E231

# F841: local variable {variable name} is assigned to but never used

exclude = 
    **/migrations/*.py  # Exclude autogenerated Django migrations
    **/__init__.py
    **/dev.py
    **/prod.py
    **/default.py
    env/
